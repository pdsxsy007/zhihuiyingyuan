<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid
                android:color="#0da665" />
            <corners
                android:radius="20dp" />

        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item>
        <shape>
            <gradient
                android:startColor="#0da665"
                android:endColor="#269577"
                android:angle="0"
                />


            <!-- 圆角 -->
            <corners
                android:radius="20dp" />
        </shape>
    </item>
</layer-list>

